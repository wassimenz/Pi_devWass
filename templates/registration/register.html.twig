{% extends 'registrebase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    {{ form_errors(registrationForm) }}
{{ form_start(registrationForm) }}

<div class="row row-space">
    <div class="col-2">
        <div class="input-group">
            <label class="label">First Name</label>
            {{ form_widget(registrationForm.name, {'attr': {'class': 'input--style-4'}}) }}
            {{ form_errors(registrationForm.name) }}
        </div>
    </div>
    <div class="col-2">
        <div class="input-group">
            <label class="label">Last Name</label>
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'input--style-4'}}) }}
            {{ form_errors(registrationForm.lastname) }}
        </div>
    </div>
</div>

<div class="row row-space">
    <div class="col-2">
        <div class="input-group">
            <label class="label">Birthday</label>
            {{ form_widget(registrationForm.dateofbirth, {'attr': {'class': 'input--style-4'}}) }}
            {{ form_errors(registrationForm.dateofbirth) }}
        </div>
    </div>
</div>

<div class="row row-space">
    <div class="col-2">
        <div class="input-group">
            <label class="label">Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'input--style-4'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
    </div>
    <div class="col-2">
        <div class="input-group">
            <label class="label">Phone Number</label>
            {{ form_widget(registrationForm.numT, {'attr': {'class': 'input--style-4'}}) }}
            {{ form_errors(registrationForm.numT) }}
        </div>
    </div>
    <div class="col-2">
        <div class="input-group">
            <label class="label">Password</label>
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input--style-4'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
    </div>
    {{ form_widget(registrationForm.recaptcha) }}
    {{ form_errors(registrationForm.recaptcha) }}
</div>

<div class="p-t-15">
    <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
</div>

{{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}